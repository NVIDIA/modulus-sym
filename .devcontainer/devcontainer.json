// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "Modulus Sym Dev Container",
	"image": "nvcr.io/nvidia/pytorch:24.08-py3",
	"runArgs": [
		"--gpus=all",
		"--env=NVIDIA_DISABLE_REQUIRE=1", // NOTE comment out if host has correct cuda driver
		"--shm-size=10.24gb"
	],
	// While it may seem a good idea to mount it with `-v` in `runArgs` above
	// that doesn't work with vscode's git integration.
	// "containerUser": "modulus",
	"containerEnv": {"EDITOR": "code -w"},
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
                // Python
                "ms-python.python",
                // Build Tools
                "ms-azuretools.vscode-docker",
                // Git & Github
                "GitHub.vscode-pull-request-github",
                // Makefile
                "ms-vscode.makefile-tools",
                // TOML
                "tamasfe.even-better-toml",
                // PyLance
                "ms-python.vscode-pylance",
                // Makefile Tools
                "ms-vscode.makefile-tools",
                // Ruff
                "charliermarsh.ruff"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/bash"
					}
				}
			}
		}
	},
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "username": "modulus",
            "installZsh": false,
            "installOhMyZsh": false,
            "configureZshAsDefaultShell": false,
            "upgradePackages": false
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest"
        }
    }
}